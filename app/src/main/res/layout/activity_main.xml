<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff5b164d"
    android:id="@+id/relativeLayoutMain"
    tools:context="com.moodybugs.saim.weatherapp.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageButton
            android:id="@+id/btnNavigationMenu"
            android:background="?android:selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu"/>

        <TextView
            android:id="@+id/txtCityName"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Dhaka"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="#AAFFFFFF"/>
        <EditText
            android:id="@+id/inputCityName"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="Enter city name"
            android:textStyle="bold"
            android:textColor="#AAFFFFFF"
            android:visibility="gone"/>
        <ImageButton
            android:id="@+id/btnSearch"
            android:background="?android:selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search"
            android:visibility="gone"/>
        <ImageButton
            android:id="@+id/btnSearchCity"
            android:background="?android:selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iconWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_10d"
            android:transitionName="@string/icon_transition"/>


        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtTempMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21&#x2103;"
                android:textColor="#DDFFFFFF"
                android:textSize="42dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                android:textColor="#33FFFFFF"
                android:textSize="42dp"/>

            <TextView
                android:id="@+id/txtTempLowest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19&#x2103;"
                android:textColor="#33FFFFFF"
                android:textSize="28dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txtWeatherDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="light rain"
            android:textColor="#99FFFFFF"
            android:textSize="22dp"/>
        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday, May 27"
            android:textColor="#99FFFFFF"
            android:textSize="18dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#11FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/txtDay1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_text"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:text="Mon"
                android:textAllCaps="true"
                android:textColor="#99FFFFFF"
                android:textSize="18dp"/>
            <ImageView
                android:id="@+id/iconWeather1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_02d"/>
            <TextView
                android:id="@+id/txtTemp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26&#x2103;"
                android:textAllCaps="true"
                android:textColor="#99FFFFFF"
                android:textSize="18dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#11FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="1dp">

            <TextView
                android:id="@+id/txtDay2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_text"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:text="TUE"
                android:textAllCaps="true"
                android:textColor="#99FFFFFF"
                android:textSize="18dp"/>
            <ImageView
                android:id="@+id/iconWeather2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_03d"/>
            <TextView
                android:id="@+id/txtTemp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26&#x2103;"
                android:textAllCaps="true"
                android:textColor="#99FFFFFF"
                android:textSize="18dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#11FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/txtDay3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_text"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:text="WED"
                android:textAllCaps="true"
                android:textColor="#99FFFFFF"
                android:textSize="18dp"/>
            <ImageView
                android:id="@+id/iconWeather3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_04d"/>
            <TextView
                android:id="@+id/txtTemp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26&#x2103;"
                android:textAllCaps="true"
                android:textColor="#99FFFFFF"
                android:textSize="18dp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
